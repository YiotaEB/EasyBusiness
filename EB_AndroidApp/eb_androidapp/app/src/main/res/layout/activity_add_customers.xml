<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.easybusiness.eb_androidapp.UI.AddCustomersActivity">

    <TextView
        android:id="@+id/customer_list_text"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/customer_list_text" />

    <TextView
        android:id="@+id/customer_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@id/customer_list_text"
        android:text="@string/customer_name_text_view" />

    <EditText
        android:id="@+id/customer_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/customer_name_text_view"
        android:inputType="textPersonName"
        android:layout_below="@id/customer_list_text"
        android:gravity="center"
        android:text="@string/customer_name_text"/>

    <TextView
        android:id="@+id/customer_telephone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/customer_name_text"
        android:gravity="center"
        android:text="@string/customer_telephone_text_view" />

    <EditText
        android:id="@+id/customer_telephone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/customer_telephone_text_view"
        android:layout_below="@id/customer_name_text"
        android:inputType="number"
        android:gravity="center"
        android:text="@string/customer_telephone_text" />

    <TextView
        android:id="@+id/customer_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_telephone_text_view"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/customer_address_text_view" />

    <EditText
        android:id="@+id/customer_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/customer_address_text_view"
        android:layout_below="@id/customer_telephone_text"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="@string/customer_address_text" />

    <TextView
        android:id="@+id/customer_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_address_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/customer_city_text_view" />

    <EditText
        android:id="@+id/customer_city_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_address_text"
        android:layout_toEndOf="@id/customer_city_text_view"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="@string/customer_city_text" />

    <TextView
        android:id="@+id/customer_country_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_city_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/customer_country_text_view" />

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/customer_city_text_view"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/customer_country_text_view"
        android:text="@string/country_spinner"
        android:visibility="visible" />

    <TextView
        android:id="@+id/customer_products_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_spinner"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/customer_products_text_view" />

    <ListView
        android:id="@+id/products_list_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/customer_products_text_view"
        android:entries="@array/randomItems"
        android:visibility="visible" />

        <Button
            android:id="@+id/add_customer_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/products_list_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/add_customer_Btn" />



</RelativeLayout>
