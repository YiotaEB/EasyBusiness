<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.easybusiness.eb_androidapp.UI.Fragments.AddSuppliersFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/supplier_name_layout"
        android:hint="@string/name"
        >

        <EditText
            android:id="@+id/supplier_name_edittext"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplier_name_layout"
        android:id="@+id/supplier_telephone_layout"
        android:hint="@string/Telephone"
        >

        <EditText
            android:id="@+id/supplier_telephone_edittext"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplier_telephone_layout"
        android:id="@+id/supplier_address_layout"
        android:hint="@string/Address"
        >

        <EditText
            android:id="@+id/supplier_address_edittext"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplier_address_layout"
        android:id="@+id/supplier_city_layout"
        android:hint="@string/City"
        >

        <EditText
            android:id="@+id/supplier_city_edittext"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/supplier_country_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/supplier_city_layout"
        android:layout_marginTop="20dp"
        android:text="@string/Select_Country" />

    <Button
        android:id="@+id/add_supplier_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_below="@id/supplier_country_spinner"
        android:text="@string/Add_Supplier" />


</RelativeLayout>