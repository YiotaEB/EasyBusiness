<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/product_adapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_alignParentStart="true"
        android:text="100"/>

    <TextView
    android:id="@+id/product_adapter_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Base.TextAppearance.AppCompat.Title"
    android:layout_toRightOf="@+id/product_adapter_id"
    android:layout_marginLeft="20dp"
    android:text="lemon"/>

    <TextView
        android:id="@+id/product_adapter_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_toEndOf="@+id/product_adapter_name"
        android:layout_marginLeft="20dp"
        android:text="500ml"/>



    <TextView
        android:id="@+id/product_adapter_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGray"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:text="250"
        android:layout_toStartOf="@id/product_adapter_line_total"/>

    <TextView
        android:id="@+id/product_adapter_line_total"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:text="line total"
        android:textAlignment="textEnd" />




</RelativeLayout>