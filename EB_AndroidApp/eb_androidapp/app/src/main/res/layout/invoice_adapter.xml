<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/invoice_adapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:text="100"/>

    <TextView
    android:id="@+id/invoice_adapter_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:layout_toRightOf="@+id/invoice_adapter_id"
    android:layout_marginLeft="20dp"
    android:text="lemon"/>

    <TextView
        android:id="@+id/invoice_adapter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toStartOf="@id/invoice_adapter_quantity"
        android:layout_marginRight="10dp"
        android:text="$$$"/>



    <TextView
        android:id="@+id/invoice_adapter_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="250"
        android:layout_toStartOf="@id/invoice_adapter_line_total"/>

    <TextView
        android:id="@+id/invoice_adapter_line_total"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:text="TOTAL$"
        android:textStyle="bold"
        android:textAlignment="textEnd" />




</RelativeLayout>