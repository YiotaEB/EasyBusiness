<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

<TextView
    android:id="@+id/sale_product_name"
    android:textColor="@color/black"
    android:layout_alignParentStart="true"
    android:layout_width="wrap_content"
    android:text="@string/name"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/times"
        android:text="×"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/sale_product_name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sale_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/times"
        android:text="100"/>


    <TextView
        android:layout_toLeftOf="@id/sale_product_total"
        android:text="€"
        android:textColor="@color/black"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sale_product_total"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="$250"
        android:textAlignment="textEnd"
        />




</RelativeLayout>