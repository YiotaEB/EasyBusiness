<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <TextView
        android:id="@+id/customer_adapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="100"/>

    <TextView
        android:id="@+id/customer_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/customer_adapter_id"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="lemon"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/customer_adapter_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="250"
        android:layout_toLeftOf="@id/customer_phonecall"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:layout_centerVertical="true"
        android:id="@+id/customer_phonecall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_phone_black_36dp"
        android:background="@color/transparent"
        android:tint="@color/darkGreen"
        android:layout_alignParentEnd="true"

        />




</RelativeLayout>