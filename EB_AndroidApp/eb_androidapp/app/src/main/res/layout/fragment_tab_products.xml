<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.easybusiness.eb_androidapp.UI.Fragments.TabFragments.ProductsTabFragment">

        <LinearLayout
            android:id="@+id/layout_top_products"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <SearchView
                android:id="@+id/products_search_view"
                android:background="@color/lightGray"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent">

            </SearchView>

            <Button
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/refresh_products"
                android:layout_marginEnd="11dp"
                android:background="@drawable/ic_refresh_black_24dp" />

            <Button
                android:id="@+id/print_products_list_btn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginEnd="11dp"
                android:background="@drawable/ic_local_printshop_black_24dp" />


            <ImageButton
                android:id="@+id/addProductButton"
                android:src="@drawable/ic_add_box_black_48dp"
                android:tint="@color/darkGreen"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ListView
            android:id="@+id/productsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_top_products"
            android:layout_marginTop="10dp"

            />


</RelativeLayout>