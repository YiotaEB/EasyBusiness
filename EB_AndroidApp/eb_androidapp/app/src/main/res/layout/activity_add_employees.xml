<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.easybusiness.eb_androidapp.UI.AddEmployeesActivity">

    <TextView
        android:id="@+id/employees_list_text"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Employees:" />

    <TextView
        android:id="@+id/employees_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/employees_list_text"
        android:gravity="center"
        android:text="Name: " />

    <EditText
        android:id="@+id/employees_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_list_text"
        android:layout_toRightOf="@id/employees_name_text_view"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="Name: "/>

    <TextView
        android:id="@+id/employees_telephone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/employees_name_text"
        android:gravity="center"
        android:text="Telephone:" />

    <EditText
        android:id="@+id/employees_telephone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/employees_telephone_text_view"
        android:layout_below="@id/employees_name_text"
        android:inputType="number"
        android:gravity="center"
        android:text="Telephone: " />

    <TextView
        android:id="@+id/employees_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_telephone_text_view"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Address:" />

    <EditText
        android:id="@+id/employees_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/employees_address_text_view"
        android:layout_below="@id/employees_telephone_text"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="adress: " />

    <TextView
        android:id="@+id/employees_city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_address_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="City:" />

    <EditText
        android:id="@+id/employees_city_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_address_text"
        android:layout_toRightOf="@id/employees_city_text_view"
        android:inputType="textPersonName"
        android:gravity="center"
        android:text="city: " />

    <TextView
        android:id="@+id/employees_country_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_city_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Country:" />

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/employees_city_text_view"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/employees_country_text_view"
        android:text="Select Country"
        android:visibility="visible" />

    <TextView
        android:id="@+id/employees_position_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/employees_city_text"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Position:" />

    <Spinner
        android:id="@+id/position_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/employees_country_text_view"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/employees_position_text_view"
        android:text="Select Country"
        android:visibility="visible" />

    <RadioButton
        android:id="@+id/part_time_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position_spinner"
        android:text="Part Time"
        android:layout_marginLeft="80dp"/>

    <RadioButton
        android:id="@+id/full_time_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/position_spinner"
        android:layout_toRightOf="@id/part_time_radio_button"
        android:layout_marginLeft="20dp"
        android:text="Full Time" />

    <Button
        android:id="@+id/add_employees_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/part_time_radio_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add Employee" />

</RelativeLayout>
