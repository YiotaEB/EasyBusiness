<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/sales_adapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:text="100"/>

    <TextView
        android:id="@+id/sales_adapter_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/sales_adapter_id"
        android:layout_marginLeft="20dp"
        android:text="Sale"/>

    <TextView
        android:id="@+id/sales_adapter_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sales_adapter_customer_name"
        android:layout_marginLeft="5dp"
        android:text="Date"/>

    <TextView
        android:id="@+id/sales_adapter_currency"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sales_adapter_total"
        android:layout_marginEnd="2dp"
        android:text="â‚¬"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/sales_adapter_total"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="$250"
        android:textAlignment="textEnd"
         />




</RelativeLayout>